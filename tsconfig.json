{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "preserveWatchOutput": true,
    "target": "es5",
    "module": "CommonJS",
    "declaration": true,
    "sourceMap": true,
    "jsx": "react",
    "lib": ["DOM", "ESNext"],
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src", "types.d.ts", "tailwind.config.js"],
  "exclude": ["node_modules", "dist"]
}
